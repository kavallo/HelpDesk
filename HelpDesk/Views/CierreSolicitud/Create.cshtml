@model HelpDesk.Models.CierreSolicitud

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    .editor-field textarea {
        width: 550px;
        height: 200px;
        max-width: 800px;
        padding: 12px 20px;
        box-sizing: border-box;
        border: 2px solid #ccc;
        border-radius: 4px;
        resize: none;
    }
</style>

<h2>Cerrar Incidencia</h2>

@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @*<h4>CierreSolicitud</h4>*@
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.SolicitudIncidenciaID, "Incidencia", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("solicitudIncidenciaID", ViewBag.SolicitudIncidencia as SelectList, "Por Favor Seleccione Una Incidencia", new { @id = "ddlSolicitud" })
                @Html.ValidationMessageFor(model => model.SolicitudIncidenciaID, "", new { @class = "text-danger" })

                @Html.Label("")

            </div>
        </div>

        <div class="">
            @*<div class="center-block">
                    @Html.LabelFor(model => model.DatoRelacionado, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="  editor-field ">
                        @Html.TextAreaFor(model => model.DatoRelacionado, new { htmlAttributes = new { @class = "form-control" } })

                        @Html.ValidationMessageFor(model => model.DatoRelacionado, "", new { @class = "text-danger" })
                    </div>
                </div>*@

            <div>
                <span id="lblFecha">Fecha Solicitud : </span>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Cerrada, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Cerrada)
                    @Html.ValidationMessageFor(model => model.Cerrada, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Comentarios, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Comentarios, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Comentarios, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.FechaCierre, "Fecha de Cierre", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.FechaCierre, new { htmlAttributes = new { @class = "form-control datepicker", autocomplete = "off", } })
                @Html.ValidationMessageFor(model => model.FechaCierre, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-default" id="btng" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Volver Atrás", "Index")
</div>


<script type="text/javascript" src="~/Scripts/jquery-3.3.1.min.js"></script>
<script type="text/javascript">
        $("#ddlSolicitud").change(function () {

            var url = "@Url.Action("LLamar", "CierreSolicitud")";
            var ID = $(this).val();
            var data = { ID: ID };


            $.post(url, data).done(function (data) {

                console.log(data[0]);

                $("#lblFecha").html("Fecha Incidencia: " + data[0].FechaIncidencia);

            }
            );
        });
</script>
<link href="~/Content/themes/base/jquery-ui.min.css" rel="stylesheet" />
@section Scripts {

    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    <script>


        $(function () {

            $(".datepicker").datepicker(
                {
                    dateformat: "dd/mm/yy",
                    changeMonth: true,
                    changeYear: true,


                });

        });
    </script>




    @Scripts.Render("~/bundles/jqueryval")
}
