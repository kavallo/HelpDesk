@model IEnumerable<HelpDesk.Models.CierreSolicitud>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Mantenimiento de Cierre de Incidencias</h2>

<p>
    @Html.ActionLink("Cerrar Incidecia", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cerrada)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comentarios)
        </th>
        <th>
            Numero de Solicitud
            @* @Html.DisplayNameFor(model => model.SolicitudIncidenciaID)*@
        </th>
        <th>
            Soporte Asignado
        </th>
        <th>

            Fecha de Solicitud
            @*@Html.DisplayNameFor(model => model.FechaCierre)*@
        </th>
        <th>

            Fecha de Cierre
            @*@Html.DisplayNameFor(model => model.FechaCierre)*@
        </th>

        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cerrada)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Comentarios)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SolicitudIncidenciaID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SolictudIncidencia.Persona1.Nombres)  @Html.DisplayFor(modelItem => item.SolictudIncidencia.Persona1.Apellidos)
        </td>
        <td>
            @item.SolictudIncidencia.FechaIncidencia.ToString("dd/MM/yyyy") 
        </td>
        <td>
            @*   @Html.DisplayFor(modelItem => item.FechaCierre)*@
            @item.FechaCierre.ToString("dd/MM/yyyy")
        </td>

        <td>
            @Html.ActionLink("Editar", "Edit", new { id = item.ID }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.ID }) |*@
            @Html.ActionLink("Eliminar", "Delete", new { id = item.ID })
        </td>
    </tr>
}

</table>
